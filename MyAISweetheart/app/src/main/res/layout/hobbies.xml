            android:text="Fashion"
            android:textOff="Fashion"
            android:textOn="Fashion" />

        <ToggleButton
            android:id="@+id/fishing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fishing"
            android:textOff="Fishing"
            android:textOn="Fishing" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/shopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Shopping"
            android:textOff="Shopping"
            android:textOn="Shopping" />

        <ToggleButton
            android:id="@+id/socialmedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Social Media"
            android:textOff="Social Media"
