        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/drawing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Drawing"
            android:textOff="Drawing"
            android:textOn="Drawing" />

        <ToggleButton
            android:id="@+id/boardgames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Board Games"
            android:textOff="Board Games"
            android:textOn="Board Games" />

        <ToggleButton
            android:id="@+id/shows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Shows"
            android:textOff="Shows"
            android:textOn="Shows" />
    </LinearLayout>

    <Button
        android:id="@+id/toChat_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next" />

</LinearLayout>