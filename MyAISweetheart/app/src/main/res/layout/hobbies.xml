<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/hobbiesTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What Are You Into?"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/hobbiesDescTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let your girlfriend know what your interests are. Select up to 5 things you like."
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/traveling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Traveling"
            android:textOff="Traveling"
            android:textOn="Traveling" />

        <ToggleButton
            android:id="@+id/exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Exercise"
            android:textOff="Exercise" />

        <ToggleButton
            android:id="@+id/movies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Movies"
            android:textOff="Movies"
            android:textOn="Movies" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/dancing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dancing"
            android:textOff="Dancing"
            android:textOn="Dancing" />

        <ToggleButton
            android:id="@+id/cooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cooking"
            android:textOff="Cooking"
            android:textOn="Cooking" />

        <ToggleButton
            android:id="@+id/outdoors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Outdoors"
            android:textOff="Outdoors"
            android:textOn="Outdoors" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/politics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Politics"
            android:textOff="Politics"
            android:textOn="Politics" />

        <ToggleButton
            android:id="@+id/pets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pets"
            android:textOff="Pets"
            android:textOn="Pets" />

